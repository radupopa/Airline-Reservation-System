@model AdministratorAddCustomerViewModel;
@{
    ViewData["Title"] = "AddCustomer";
}
<h1>AddCustomer</h1>
<form asp-action="AddCustomer" method="post">
    <div class="row">
        <div class="col-2">
            UserName
        </div>
        <div class="col-10">
            <input class="form-control"
                   asp-for="UserName" />


        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Password
        </div>
        <div class="col-10">
            <input class="form-control"
                   asp-for="Password" />


        </div>
    </div>
    <div class="row">
        <div class="col-10"></div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>